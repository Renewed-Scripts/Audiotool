<Window x:Class="Audiotool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audiotool"
        mc:Ignorable="d"
        Title="FiveM Audiotool" Height="900" Width="1300"
        MinHeight="600" MinWidth="900"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="FiveM Audiotool"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource WhiteTextBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          x:Name="ThemeComboBox"
                          Width="100"
                          Height="32"
                          VerticalContentAlignment="Center"
                          Style="{StaticResource ThemedComboBoxStyle}"
                          SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Dark" Tag="Dark" Style="{StaticResource ThemedComboBoxItemStyle}"/>
                    <ComboBoxItem Content="Light" Tag="Light" Style="{StaticResource ThemedComboBoxItemStyle}"/>
                </ComboBox>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource PanelStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Audio Files" Style="{StaticResource HeaderTextStyle}" FontSize="16"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              x:Name="AudioFilesDataGrid"
                              ItemsSource="{Binding AudioFiles}"
                              SelectedItem="{Binding SelectedAudio}"
                              SelectionMode="Extended"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              IsReadOnly="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              RowHeaderWidth="0"
                              Style="{StaticResource ThemedDataGridStyle}"
                              BorderThickness="1"
                              SelectionChanged="AudioFilesDataGrid_SelectionChanged">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ThemedDataGridColumnHeader}"/>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource ThemedDataGridCell}"/>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource ThemedDataGridRow}"/>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="File Name"
                                                Binding="{Binding FileName}"
                                                Width="140"
                                                MinWidth="120"/>
                            <DataGridTextColumn Header="Volume"
                                                Binding="{Binding Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="70"/>
                            <DataGridTextColumn Header="Headroom"
                                                Binding="{Binding Headroom}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Play Begin"
                                                Binding="{Binding PlayBegin}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Play End"
                                                Binding="{Binding PlayEnd}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Loop Begin"
                                                Binding="{Binding LoopBegin}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Loop End"
                                                Binding="{Binding LoopEnd}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Loop Point"
                                                Binding="{Binding LoopPoint}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Peak"
                                                Binding="{Binding Peak}"
                                                Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
                        <Button Content="Add Files"
                                Command="{Binding AddFilesCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"
                                ToolTip="Select audio files to add to your project (.wav, .mp3, etc.)"/>
                        <Button Content="Remove Selected"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButtonStyle}"
                                ToolTip="Remove the selected audio files from your project (supports multi-selection)"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource PanelStyle}" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                    <TextBlock Text="Settings Management" Style="{StaticResource HeaderTextStyle}"/>
                    <StackPanel Margin="0,0,0,20">
                        <Button Content="Save Settings"
                                Command="{Binding SaveSettingsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                ToolTip="Save all current settings and audio files to a JSON file"/>
                        <Button Content="Load Settings"
                                Command="{Binding LoadSettingsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                ToolTip="Load settings and audio files from a previously saved JSON file"/>
                    </StackPanel>

                    <TextBlock Text="Build Configuration" Style="{StaticResource HeaderTextStyle}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Soundset Name:"
                                   VerticalAlignment="Center" Margin="0,0,10,8" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding SoundSetName}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,8"
                                 ToolTip="Name of the sound set used in game scripts"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Audiobank Name:"
                                   VerticalAlignment="Center" Margin="0,0,10,8" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding AudioBankName}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,8"
                                 ToolTip="Name of the audio bank file (.awc) that will be generated"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Audio Data Name:"
                                   VerticalAlignment="Center" Margin="0,0,10,8" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding AudioDataFileName}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,8"
                                 ToolTip="Base name for generated audio data files (avoids conflicts with other mods)"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Output Audio Name:"
                                   VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding OutputAudioName}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 ToolTip="Name of the final resource folder (default: Renewed-Audio)"/>
                    </Grid>

                    <CheckBox IsChecked="{Binding DebugFiles}"
                              Content="Include Debug Files"
                              FontWeight="SemiBold"
                              FontSize="12"
                              Style="{StaticResource ThemedCheckBoxStyle}"
                              Margin="0,0,0,15"
                              VerticalAlignment="Center"
                              ToolTip="Include debug files in build (output.awc.xml, dat54.rel.xml, awc.nametable, wav folder)"/>

                    <TextBlock Text="Output Settings" Style="{StaticResource HeaderTextStyle}"/>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Output Path:" FontWeight="SemiBold" Margin="0,0,0,5"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Text="{Binding OutputPath}"
                                 IsReadOnly="True"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,8"
                                 Opacity="0.7"/>
                        <Button Content="Choose Output Folder"
                                Command="{Binding OutputFolderCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                ToolTip="Select where to save the generated audio resource files"/>
                    </StackPanel>

                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource SuccessButtonBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Build Resource" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,10"/>
                            <Button Content="Build Audio Resource"
                                    Command="{Binding ExportCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="14"
                                    Padding="15,12"
                                    ToolTip="Generate the audio resource files ready for use in your mod"/>
                        </StackPanel>
                    </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="{DynamicResource FooterBackgroundBrush}"
                BorderBrush="{DynamicResource FooterBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Ready - Select audio files to begin building your resource"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Opacity="0.7"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Files: " FontSize="11"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                    <TextBlock Text="{Binding AudioFiles.Count}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
