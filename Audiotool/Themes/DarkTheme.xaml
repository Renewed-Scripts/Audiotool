<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#252526</Color>
    <Color x:Key="HeaderBackgroundColor">#2D2D30</Color>
    <Color x:Key="FooterBackgroundColor">#2D2D30</Color>
    <Color x:Key="PanelBorderColor">#3F3F46</Color>
    <Color x:Key="FooterBorderColor">#3F3F46</Color>
    <Color x:Key="InputBorderColor">#464647</Color>
    <Color x:Key="DataGridAlternatingRowColor">#2A2A2D</Color>

    <Color x:Key="PrimaryTextColor">#CCCCCC</Color>
    <Color x:Key="SecondaryTextColor">#FFFFFF</Color>
    <Color x:Key="WhiteTextColor">#FFFFFF</Color>

    <Color x:Key="PrimaryButtonColor">#0E639C</Color>
    <Color x:Key="PrimaryButtonHoverColor">#1177BB</Color>
    <Color x:Key="PrimaryButtonPressedColor">#0A527A</Color>

    <Color x:Key="SecondaryButtonColor">#3C3C3C</Color>
    <Color x:Key="SecondaryButtonHoverColor">#484848</Color>
    <Color x:Key="SecondaryButtonPressedColor">#2D2D2D</Color>

    <Color x:Key="DangerButtonColor">#F14C4C</Color>
    <Color x:Key="DangerButtonHoverColor">#FF6B6B</Color>
    <Color x:Key="DangerButtonPressedColor">#CC3333</Color>

    <Color x:Key="SuccessButtonColor">#107C10</Color>
    <Color x:Key="SuccessButtonHoverColor">#13A10E</Color>
    <Color x:Key="SuccessButtonPressedColor">#0D5D0D</Color>

    <Color x:Key="DataGridHeaderBackgroundColor">#37373D</Color>
    <Color x:Key="DataGridHeaderTextColor">#FFFFFF</Color>
    <Color x:Key="DataGridHeaderBorderColor">#3F3F46</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="{StaticResource FooterBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorderColor}"/>
    <SolidColorBrush x:Key="FooterBorderBrush" Color="{StaticResource FooterBorderColor}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="{StaticResource DataGridAlternatingRowColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="WhiteTextBrush" Color="{StaticResource WhiteTextColor}"/>

    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{StaticResource PrimaryButtonColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="{StaticResource PrimaryButtonHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonPressedBrush" Color="{StaticResource PrimaryButtonPressedColor}"/>

    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="{StaticResource SecondaryButtonColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="{StaticResource SecondaryButtonHoverColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonPressedBrush" Color="{StaticResource SecondaryButtonPressedColor}"/>

    <SolidColorBrush x:Key="DangerButtonBrush" Color="{StaticResource DangerButtonColor}"/>
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="{StaticResource DangerButtonHoverColor}"/>
    <SolidColorBrush x:Key="DangerButtonPressedBrush" Color="{StaticResource DangerButtonPressedColor}"/>

    <SolidColorBrush x:Key="SuccessButtonBrush" Color="{StaticResource SuccessButtonColor}"/>
    <SolidColorBrush x:Key="SuccessButtonHoverBrush" Color="{StaticResource SuccessButtonHoverColor}"/>
    <SolidColorBrush x:Key="SuccessButtonPressedBrush" Color="{StaticResource SuccessButtonPressedColor}"/>

    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="{StaticResource DataGridHeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderTextBrush" Color="{StaticResource DataGridHeaderTextColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderBorderBrush" Color="{StaticResource DataGridHeaderBorderColor}"/>

</ResourceDictionary>
